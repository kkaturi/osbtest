<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
http://maven.apache.org/maven-v4_0_0.xsd"
xmlns="http://maven.apache.org/POM/4.0.0"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.oracle.servicebus</groupId>
        <artifactId>sbar-project-common</artifactId>
        <version>12.2.1-3-0</version>
    </parent>
    <groupId>MavenTest</groupId>
    <artifactId>CI_helloWorldProject</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>sbar</packaging>
    <build>
        <plugins>
            <plugin>
                <groupId>com.oracle.adf.plugin</groupId>
                <artifactId>ojdeploy</artifactId>
                <version>12.2.1-3-0</version>
                <configuration>
                    <ojdeploy>${oracleHome}/jdeveloper/jdev/bin/ojdeploy.exe</ojdeploy>
                    <workspace>${basedir}/../CI-demo-application.jws</workspace>
                    <project>CI_helloWorldProject</project>
                    <profile>CI_helloWorldProject</profile>
                    <outputfile>${project.build.directory}/${project.build.finalName}.${project.packaging}</outputfile>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>deploy</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <properties>
        <oracleUsername>weblogicUN</oracleUsername>
        <oraclePassword>weblogicPW</oraclePassword>
        <oracleHome>E:/OracleBPM12213/Middleware/Oracle_Home</oracleHome>
        <oracleServerUrl>http://localhost:7001</oracleServerUrl>
    </properties>
</project>